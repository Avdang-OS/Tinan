{
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "rootDirs": ["src", "config"],
    "sourceMap": true,
    "paths": {
      "@/*" : [
        "./*"
      ] 
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*",],
  "exclude": ["node_modules", "dist"],
}
